<div id="carouselExampleIndicators<%= meal.id %>" class="carousel slide" data-bs-interval="false">
  <div class="carousel-indicators">
    <% meal.photos.each_with_index do |photo, index| %>
      <button type="button" data-bs-target="#carouselExampleIndicators<%= meal.id %>" data-bs-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>" <%= index == 0 ? 'aria-current="true"' : '' %> ></button>
    <% end %>
  </div>
  <div class="carousel-inner">
    <% if meal.photos.present? %>
      <% meal.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
          <%= cl_image_tag photo.key, class:"big-carousel-img w-100", height: 200 %>
        </div>
      <% end %>
    <% else %>
      <% if meal.picture_url.present? %>
        <%= image_tag meal.picture_url, class:"big-carousel-img w-100", height: 200 %>
      <% end %>
    <% end %>
  </div>
  <% if meal.photos.present? %>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators<%= meal.id %>" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators<%= meal.id %>" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  <% end %>
</div>
