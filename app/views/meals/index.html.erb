<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_tag(meals_path, method: "get", class: "form-inline d-flex align-items-between") do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Enter your address" %>
        </div>
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
          <i class="icon-ok icon-white"></i> Search
        <% end %>
      <% end %>
      <div class="py-4">
        <% @meals.each do |meal| %>
          <h4><%= meal.name %></h4>
          <p>Available from: <%= meal.collect_from.strftime('%d/%m/%Y') %> - <%= meal.collect_to.strftime('%d/%m/%Y') %></p>
          <p>Pickup times: <%= meal.collect_from.strftime('%-I %p') %></p>
          <p>$ <%= meal.price.truncate() %> per serving</p>
          <p><%= meal.user.address %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
