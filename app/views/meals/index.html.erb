<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<div class="container pt-4">
  <div class="row justify-content-center">
    <div class="col-6">
      <h3>Search for homemade meals near you: </h3>
      <%= form_tag(meals_path, method: "get", class: "form-inline d-flex align-items-between") do %>
        <div class="input-group">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Enter your address" %>
        </div>
        <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
          <i class="icon-ok icon-white"></i> Search
        <% end %>
      <% end %>
      <div class="py-4">
        <% @meals.each do |meal| %>

          <div class="col-12 col-sm-6 mb-3">
            <div class="card-deck h-100">
              <div class="card">
                <div id="<%= meal.id %>carouselExampleIndicators1" class="carousel slide" data-ride="carousel" data-interval="false">
                  <ol class="carousel-indicators">
                    <% meal.photos.each_with_index do |photo, index| %>
                      <li data-target="#<%= meal.id %>carouselExampleIndicators1" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
                    <% end %>
                  </ol>
                  <div class="carousel-inner">
                    <% if meal.photos.attached? %>
                      <% meal.photos.each_with_index do |photo, index| %>
                        <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                          <%= cl_image_tag photo.key, class:"carousel-img w-100", height: 200 %>
                        </div>
                      <% end %>
                    <% else %>
                      <%= image_tag meal.picture_url, class:"carousel-img w-100", height: 200 %>
                    <% end %>
                  </div>
                  <a class="carousel-control-prev" href="#<%= meal.id %>carouselExampleIndicators1" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#<%= meal.id %>carouselExampleIndicators1" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
                <%= link_to meal_path(meal), class:"text-decoration-none" do %>
                  <div class="card-body d-flex justify-content-between">
                    <div style="width: 70%">
                      <h6 class="card-title"><%= meal.name %></h6>
                      <p class="card-text mb-0"><small class="text-muted">Available from: <%= meal.collect_from.strftime('%d/%m') %> - <%= meal.collect_to.strftime('%d/%m') %></small></p>
                      <p class="card-text"><small class="text-muted">Pickup time: <%= meal.collect_from.strftime('%-I %p') %></small></p>
                    </div>
                    <div class="card-text text-right" style="font-size: 14px">
                      <p><strong>$ <%= meal.price.truncate() %></strong>/serving</p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
