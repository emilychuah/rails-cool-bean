<div class="section p-2">
  <div class="d-flex justify-content-center">
    <h1>New Meal</h1>
  </div>

  <div class="section d-flex justify-content-center">
  <%= simple_form_for(@meal) do |f| %>
    <%= f.input :title %>

    <%= f.input :address,
                input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>

    <%= f.input :description %>

    <%= f.input :serving_availability %>

    <%= f.input :price_per_serving %>

    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <div class="d-flex justify-content-center">
      <%= f.button :submit, class: "btn btn-primary btn-lg" %>
    </div>
    <div class="d-flex justify-content-center">
    <%= link_to "Return to home", meals_path(@meal), class: 'btn btn-link text-decoration-none' %>
    </div>
  <% end %>
  </div>
</div>
