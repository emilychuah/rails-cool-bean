<div class="section p-2">
  <div class="d-flex justify-content-center">
    <h1>New Meal</h1>
  </div>

  <div class="section d-flex justify-content-center">
  <%= simple_form_for(@meal) do |f| %>
    <%= f.input :name %>

    <%= f.input :description %>

    <%= f.input :cuisine %>

    <%= f.input :price %>

    <%= f.input :available_quantity %>

    <%= f.input :collection_from %>

    <%= f.input :collection_to %>

    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <div class="d-flex justify-content-center">
      <%= f.button :submit, class: "btn btn-primary btn-lg" %>
    </div>
    <div class="d-flex justify-content-center">
    <%= link_to "Return to home", meals_path(@meal), class: 'btn btn-link text-decoration-none' %>
    </div>
  <% end %>
  </div>
</div>
