<%# show footer other than mobile %>
<footer class="footer d-none d-sm-block">
  <div class="bottomsection row">
    <div class="col">
      <div>
        <h1>CoolBean</h1>
      </div>
      <div>
        <h2>Share your love for homemade food</h2>
      </div>
    </div>

    <div class="col">
      <div class="row">
        <div class="col">
          <div>
            <strong>Learn</strong>
          </div>
          <div><a href="#">Gift cards</a></div>
          <div><a href="#">Help centers</a></div>
          <div><a href="#">Covid-19 safety</a></div>
        </div>
