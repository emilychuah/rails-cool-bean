<div class="container pt-5 d-flex justify-content-center">
  <div class="row justify-content-center registration">
    <div class="col-6">
      <div class="d-flex justify-content-center"><h2>Log in</h2></div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in", class: "btn createmeal" %>
        </div>
      <% end %>
      <div class="d-flex justify-content-center">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
      <div class="d-flex justify-content-center"><%= link_to "Signup", new_user_registration_path %></div>
    </div>
  </div>
</div>
