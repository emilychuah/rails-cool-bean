<div class="p-5" id="newform">
  <div class="m-2  d-flex flex-column">
    <h3 class="d-flex justify-content-center">You've successfully placed an order! </h3>
    <h4 class="d-flex justify-content-center">Here are the details:</h4>
  </div>
  <div class="m-2">
    <% @order.meal_orders.each do |item| %>
    <div class="d-flex justify-content-center"><strong><p>Your order:</strong> <%= item.meal.name %></p></div>
    <div class="d-flex justify-content-center"><strong><p>Item Price:</strong> $<%= item.meal.price %></p></div>
     <div class="d-flex justify-content-center"><strong><p>Quantity:</strong> <%= item.quantity_ordered %></p></div>
    <div class="d-flex justify-content-center"><strong><p>Chef:</strong> <%= item.meal.user.name %></p></div>
    <div class="d-flex justify-content-center"><strong><p>Chef Number:</strong> <%= item.meal.user.phone_number %></p></div>
    <div class="d-flex justify-content-center"><strong><p>Order Total Price:</strong> $<%= item.total_price %></p></div>
    <%end%>

  </div>

  <div class="d-flex justify-content-center p-10">
    <%= link_to "Home Page", meals_path(@order), class: "btn btn-outline-secondary mx-2" %>
    <%# <%= link_to "orders Page", orders_path(@order), class: "btn btn-outline-secondary mx-2 btn" %>
  </div>
</div>
